generator client {
  provider   = "prisma-client-js"
  output     = "../src/infrastructure/prisma/client"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  password_hash String
  name          String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  avatarId      String?  @default("avatar_1")
  task Task[]
  category Category[]
  career Career[]
  enrollments   Enrollment[]

  @@map("users")
}

model Category {
  id          String   @id @default(uuid())
  name        String
  color       String?
  userId      String
  user       User     @relation(fields: [userId], references: [id])
  task       Task[]
  createdAt   DateTime @default(now())
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String?
  status      String   @default("PENDING")
  userId      String   
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
}

model Career {
  id String @id @default(uuid())
  name String
  userId   String
  user     User      @relation(fields: [userId], references: [id])
  subjects Subject[]

}

model Subject{
  id String @id @default(uuid())
  careerId String
  career Career @relation(fields: [careerId], references: [id])
  name String
  yearLevel Int
  semester Int
  enrollments Enrollment[]
}

model Enrollment{
  id String @id @default(uuid())
  userId String
  user User @relation(fields: [userId], references: [id])
  subjectId String
  subject Subject @relation(fields: [subjectId], references: [id])
  status String
  finalGrade   Float?
  academicYear Int
  createdAt    DateTime @default(now())
}
