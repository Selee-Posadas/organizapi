generator client {
  provider   = "prisma-client-js"
  output     = "../src/infrastructure/prisma/client"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  password_hash String
  name          String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  avatarId      String?  @default("avatar_1")

  @@map("users")
}
